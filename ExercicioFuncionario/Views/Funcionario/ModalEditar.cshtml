<div class="modal fade " id="modal-editar-funcionario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Funcionario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="modal-editar-funcionario-id" />
                <div class="form-group">
                    <label for="modal-editar-funcionario-nome">Funcionario</label>
                    <input type="text" id="modal-editar-funcionario-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="modal-editar-funcionario-login">Login</label>
                    <input type="text" id="modal-editar-funcionario-login" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="modal-editar-funcionario-senha">Senha</label>
                    <input type="password" id="modal-editar-funcionario-senha" class="form-control" />
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="modal-editar-funcionario-sexo-masculino" value="Masculino" checked>
                    <label class="form-check-label" for="modal-editar-funcionario-sexo-masculino">Masculino</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="modal-editar-funcionario-sexo-feminino" value="Feminino">
                    <label class="form-check-label" for="modal-editar-funcionario-sexo-feminino">Feminino</label>
                </div>
                <div class="form-group">
                    <label for="modal-editar-funcionario-salario">Salario</label>
                    <input type="number" id="modal-editar-funcionario-salario" class="form-control" />
                </div>
            </div>
        </div>
    </div>
</div>
